@model Tier.Gui.CotizarService.CotizacionModelo

@{
    ViewBag.Title = "ConsultarCotizacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Consultar cotización</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("ListaCotizaciones", "Comercial", new { id = ViewBag.cliente_idCliente }, null)"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm("", "Comercial", null, FormMethod.Post, new { @class = "form-horizontal form-label-left", onsubmit = "xFnCotizar.HabilitaCampos();" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("editando", false)
                @Html.Hidden("activo", true)
                @Html.Hidden("hdfProdCotizar")
                @Html.Hidden("cliente_idcliente", Model.cliente_idcliente)
                @Html.Hidden("idcotizacion", Model.idcotizacion)

                Tier.Gui.CotizarService.Cliente objCliente = (Tier.Gui.CotizarService.Cliente)ViewBag.Cliente;
                Tier.Gui.CotizarService.Municipio objMuni = (Tier.Gui.CotizarService.Municipio)ViewBag.Municipio;
                Tier.Gui.CotizarService.Departamento objDpto = (Tier.Gui.CotizarService.Departamento)ViewBag.Departamento;

                <div class="form-group">
                    <div class="col-xs-12 invoice-header">
                        <h1>
                            <i class="fa fa-building"></i> @objCliente.nombre
                        </h1>
                    </div>
                    <div class="row invoice-info">
                        <div class="col-sm-12 invoice-col">
                            <address>
                                <strong>Identificación:</strong>@objCliente.identificacion
                                <strong>Dirección:</strong> @objCliente.direccion
                                <strong>Ciudad:</strong> @objMuni.nombre
                                <strong>Departamento:</strong> @objDpto.nombre
                            </address>
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div id="nuevoProductoCotizar">
                        <div id="contSLPeriodo">
                            @Html.DropDownListFor(model => model.periodo_idPeriodo, null, " -- Periodo -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                            @Html.ValidationMessageFor(model => model.periodo_idPeriodo)
                            <span class="fa fa-puzzle-piece form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div id="contProductosCotizacion">
                        <table id="tblProductosCotizacion">
                            <thead></thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div id="sinProductosMsj">
                        <div style="width: 80%;text-align:center;margin: 0 auto;font-size: smaller;color: darkorange;">
                            <p>
                                <span class="glyphicon glyphicon-alert" aria-hidden="true" style="font-size: 32px;"></span>
                            </p><span>No se han ingresado productos en la cotización</span>
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                        @Html.LabelFor(model => model.observaciones, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                            @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control has-feedback-left", placeholder = "Observaciones generales" })
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                        <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                            @Html.LabelFor(model => model.valoresplancha, new { @class = "control-label col-md-12 col-sm-12 col-xs-12" })
                            @Html.TextBoxFor(model => model.valoresplancha, "awefwef wef ", new { @class = "form-control col-md-12 col-sm-12 col-xs-12 has-feedback-left", placeholder = "" })
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                            @Html.LabelFor(model => model.valorestroqueles, new { @class = "control-label col-md-12 col-sm-12 col-xs-12" })
                            @Html.TextBoxFor(model => model.valorestroqueles, "efw a ewf", new { @class = "form-control col-md-12 col-sm-12 col-xs-12 has-feedback-left", placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" name="btnGuardar" id="btnGuardar" class="btn btn-success btn-lg" value="Generar pedido" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div tabindex="-2" class="modal fade bs-example-modal-sm2" role="dialog" aria-hidden="true" style="display: none">
    <div class="modal-dialog" style=" max-width: 600px;">
        <!-- Modal content-->
        <div class="modal-content">
            <form action="" method="post" id="frmDetalleProdCotizacionEscala">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div id="trgCotProDetEscala" class="modal-body"></div>
                <div class="col-md-12">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@*Modal para el detalle del producto*@
<div tabindex="-3" class="modal fade bs-example-modal-sm3" role="dialog" aria-hidden="true" style="display: none">
    <div class="modal-dialog" style=" max-width: 600px;">
        <!-- Modal content-->
        <div class="modal-content">
            <form action="" method="post" id="frmDetalleProdCotizacion">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div id="trgCotProDet" class="modal-body"></div>
                <div class="col-md-12">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {

        $('.bs-example-modal-sm1').on('hidden.bs.modal', function (e) {
            xFnCotizar.RestaurarModalProdCotizar();
        });

        $('.bs-example-modal-sm1').on('show.bs.modal', function (e) {
            if ($("#periodo_idPeriodo").val() == null || $("#periodo_idPeriodo").val() == "") {
                new PNotify({
                    title: 'Debe seleccionar un periodo',
                    text: '',
                    type: 'error'
                });
                return false;
            }
        });

        xFnCotizar.CargarTablaProductosCotizar();
        NProgress.done();
    });
</script>