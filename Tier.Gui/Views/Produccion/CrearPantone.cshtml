@model Tier.Gui.CotizarService.Pantone

@{
    ViewBag.Title = "CrearPantone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Nuevo pantone</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("ListaPantones", "Produccion" )"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm("CrearPantone", "Produccion", null, FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("editando", false)
                @Html.Hidden("nombreinicial", null)
                @Html.Hidden("hexinicial", null)
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback cursorno-drop">
                        @Html.DropDownListFor(model => model.empresa_idempresa, null, " -- Empresa -- ", new { @class = "form-control has-feedback-left empresaSL" })
                        @Html.ValidationMessageFor(model => model.empresa_idempresa)
                        <span class="fa fa-building form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                        @Html.TextBoxFor(model => model.nombre, new { @class = "form-control has-feedback-left", placeholder = "Nombre" })
                        @Html.ValidationMessageFor(model => model.nombre)
                        <span class="fa fa-eye form-control-feedback left" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                        @Html.LabelFor(model => model.hex, new { @class = "control-label col-md-2" })
                        <div class="col-md-8 col-sm-8 col-xs-8 form-group has-feedback">
                            @Html.TextBoxFor(model => model.hex, new { @class = "form-control", placeholder = "Color HEX" })
                            @Html.ValidationMessageFor(model => model.hex)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                        @Html.LabelFor(model => model.r, new { @class = "control-label col-md-2" })
                        <div class="col-md-8 col-sm-8 col-xs-8 form-group has-feedback">
                            @Html.TextBoxFor(model => model.r, new { @class = "form-control", placeholder = "RED (RGB)" })
                            @Html.ValidationMessageFor(model => model.r)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                        @Html.LabelFor(model => model.g, new { @class = "control-label col-md-2" })
                        <div class="col-md-8 col-sm-8 col-xs-8 form-group has-feedback">
                            @Html.TextBoxFor(model => model.g, new { @class = "form-control", placeholder = "Green (RGB)" })
                            @Html.ValidationMessageFor(model => model.g)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                        @Html.LabelFor(model => model.b, new { @class = "control-label col-md-2" })
                        <div class="col-md-8 col-sm-8 col-xs-8 form-group has-feedback">
                            @Html.TextBoxFor(model => model.b, new { @class = "form-control", placeholder = "Blue (RGB)" })
                            @Html.ValidationMessageFor(model => model.b)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                        @Html.LabelFor(model => model.valor, new { @class = "control-label col-md-2" })
                        <div class="col-md-8 col-sm-8 col-xs-8 form-group has-feedback">
                            @Html.TextBoxFor(model => model.valor, new { @class = "form-control", placeholder = "Valor" })
                            @Html.ValidationMessageFor(model => model.valor)
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" name="btnGuardar" id="btnGuardar" class="btn btn-success" value="Guardar" />
                        <button type="reset" class="btn btn-primary">Limpiar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>