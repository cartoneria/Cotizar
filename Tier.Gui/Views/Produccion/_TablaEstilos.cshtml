@model IEnumerable<Tier.Gui.CotizarService.Estilo>

<script>
    NProgress.start();
</script>

<table id="tblEstilos">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreimagen)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <ul class="nav nav-pills" role="tablist">
                        <li role="presentation" class="dropdown">
                            <a id="drop4" href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="true">
                                <span class="fa fa-chevron-down"></span>
                            </a><div class="dropdown-backdrop"></div>
                            <ul id="menu6" class="dropdown-menu animated fadeInDown" role="menu">
                                <li role="presentation">
                                    @Html.ActionLink("Modificar", "EditarEstilo", "Produccion", new { id = item.idestilo }, null)
                                </li>
                                <li role="presentation" class="divider"></li>
                                <li role="presentation">
                                    @Html.ActionLink("Eliminar", "EliminarEstilo", "Produccion", new { id = item.idestilo }, null)
                                </li>
                            </ul>
                        </li>
                    </ul>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.activo)
                </td>
                <td>
                    <a href="@Url.Content("~/images/Estilos/" + item.nombreimagen)" target="_blank">
                        <img src="@Url.Content("~/images/Estilos/" + item.nombreimagen)" alt="Corte troquel" width="200" height="100" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $("#tblEstilos").DataTable();
</script>

<script>
    NProgress.done();
</script>
