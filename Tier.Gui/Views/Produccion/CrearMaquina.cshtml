@model Tier.Gui.CotizarService.Maquina

@{
    ViewBag.Title = "CrearMaquina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Nueva máquina</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="#"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-wrench"></i></a>
                </li>
                <li>
                    <a href="@Url.Action("ListaMaquinas", "Produccion")"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm("CrearMaquina", "Produccion", null, FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-3 col-sm-12 col-xs-12 form-group has-feedback">
                        @Html.TextBoxFor(model => model.codigo, new { @class = "form-control has-feedback-left", placeholder = "Código", data_val = "true", data_val_required = "Dato requerido." })
                        <span class="fa fa-paw form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="col-md-6 col-sm-142 col-xs-12 form-group has-feedback">
                        @Html.DropDownListFor(model => model.empresa_idempresa, (SelectList)ViewBag.empresa_idempresa, " -- Empresa -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                        <span class="fa fa-calculator form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="col-md-3 col-sm-142 col-xs-12 form-group has-feedback">
                        @Html.DropDownListFor(model => model.itemlista_iditemlistas_tipo, (SelectList)ViewBag.itemlista_iditemlistas_tipo, " -- Tipo -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                        <span class="fa fa-calculator form-control-feedback left" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                        @Html.LabelFor(model => model.nombre, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                        <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                            @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.nombre)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                        @Html.LabelFor(model => model.descripcion, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                        <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                            @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.descripcion)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-12 col-xs-12 form-group has-feedback">
                        @Html.LabelFor(model => model.largomin, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            @Html.TextBoxFor(model => model.largomin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.largomin)
                        </div>

                        @Html.LabelFor(model => model.largomax, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            @Html.TextBoxFor(model => model.largomax, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.largomax)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-12 col-xs-12 form-group has-feedback">
                        @Html.LabelFor(model => model.anchomin, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            @Html.TextBoxFor(model => model.anchomin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.anchomin)
                        </div>
                        @Html.LabelFor(model => model.anchomax, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            @Html.TextBoxFor(model => model.anchomax, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.anchomax)
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <input type="submit" name="btnGuardar" id="btnGuardar" class="btn btn-success" value="Guardar" />
                        <button type="reset" class="btn btn-primary">Limpiar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>