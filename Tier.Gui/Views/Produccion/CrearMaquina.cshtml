@model Tier.Gui.CotizarService.MaquinaModel

@{
    ViewBag.Title = "CrearMaquina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Nueva máquina</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("ListaMaquinas", "Produccion")"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm("CrearMaquina", "Produccion", null, FormMethod.Post, new { @class = "form-horizontal form-label-left", id = "frmCrearMaquina" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("editando", false)

                <div class="form_wizard wizard_horizontal" id="wizard">
                    @*Cabeceras Secciones*@
                    <ul class="wizard_steps anchor">
                        <li>
                            <a class="selected" href="#step-1" rel="1" isdone="1">
                                <span class="step_no">1</span>
                                <span class="step_descr">
                                    Pasp 1<br>
                                    <small>Datos básicos</small>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a class="disabled" href="#step-2" rel="2" isdone="0">
                                <span class="step_no">2</span>
                                <span class="step_descr">
                                    Paso 2<br>
                                    <small>Datos técnicos</small>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a class="disabled" href="#step-3" rel="3" isdone="0">
                                <span class="step_no">4</span>
                                <span class="step_descr">
                                    Paso 3<br>
                                    <small>Datos producción</small>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a class="disabled" href="#step-4" rel="4" isdone="0">
                                <span class="step_no">4</span>
                                <span class="step_descr">
                                    Paso 4<br>
                                    <small>Datos presupuestales</small>
                                </span>
                            </a>
                        </li>
                    </ul>
                    @*Contenedores*@
                    <div class="stepContainer">
                        <div class="wizard_content" id="step-1" style="display: block;">
                            <div class="form-group">
                                <div class="col-md-6 col-sm-142 col-xs-12 form-group has-feedback">
                                    @Html.DropDownListFor(model => model.empresa_idempresa, (SelectList)ViewBag.empresa_idempresa, " -- Empresa -- ", new { @class = "form-control has-feedback-left" })
                                    @Html.ValidationMessageFor(model => model.empresa_idempresa)
                                    <span class="fa fa-building form-control-feedback left" aria-hidden="true"></span>
                                </div>
                                <div class="col-md-3 col-sm-142 col-xs-12 form-group has-feedback">
                                    @Html.DropDownListFor(model => model.itemlista_iditemlistas_tipo, (SelectList)ViewBag.itemlista_iditemlistas_tipo, " -- Tipo -- ", new { @class = "form-control has-feedback-left" })
                                    @Html.ValidationMessageFor(model => model.itemlista_iditemlistas_tipo)
                                    <span class="fa fa-plug form-control-feedback left" aria-hidden="true"></span>
                                </div>
                                <div class="col-md-3 col-sm-12 col-xs-12 form-group has-feedback">
                                    @Html.TextBoxFor(model => model.codigo, new { @class = "form-control has-feedback-left", placeholder = "Código" })
                                    @Html.ValidationMessageFor(model => model.codigo)
                                    <span class="fa fa-paw form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                    @Html.LabelFor(model => model.nombre, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.nombre)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                    @Html.LabelFor(model => model.turnos, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.turnos, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.turnos)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                    @Html.LabelFor(model => model.consumonominal, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.consumonominal, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.consumonominal)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wizard_content" id="step-2" style="display: none;">
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                    @Html.LabelFor(model => model.areaancho, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.areaancho, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.areaancho)
                                    </div>

                                    @Html.LabelFor(model => model.arealargo, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.arealargo, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.arealargo)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                    @Html.LabelFor(model => model.largominmp, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.largominmp, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.largominmp)
                                    </div>

                                    @Html.LabelFor(model => model.largomaxmp, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.largomaxmp, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.largomaxmp)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                    @Html.LabelFor(model => model.anchominmp, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.anchominmp, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.anchominmp)
                                    </div>
                                    @Html.LabelFor(model => model.anchomaxmp, new { @class = "control-label control-label col-md-2 col-sm-3 col-xs-12" })
                                    <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                                        @Html.TextBoxFor(model => model.anchomaxmp, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.anchomaxmp)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wizard_content" id="step-3" style="display: none;">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.hfdCfgProduccion)
                                @Html.ValidationMessageFor(model => model.hfdCfgProduccion)
                                <button class="btn btn-default btn-xs" type="button" data-toggle="modal" data-target=".bs-example-modal-sm1">Agregar</button>
                            </div>
                            <div class="ln_solid"></div>
                            <div id="divDatosProduccion" style="width: 500px; margin: 0 auto;">
                                <div style="width: 80%;text-align:center;margin: 0 auto;font-size: smaller;color: darkorange;"><p><span class="glyphicon glyphicon-alert" aria-hidden="true" style="font-size: 32px;"></span></p><span>No se han configurado variaciones de produción</span></div>
                            </div>
                        </div>
                        <div class="wizard_content" id="step-4" style="display: none;">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.hfdDatosPeriodicos)
                                @Html.ValidationMessageFor(model => model.hfdDatosPeriodicos)
                                <button class="btn btn-default btn-xs" type="button" data-toggle="modal" data-target=".bs-example-modal-sm2">Agregar</button>
                            </div>
                            <div class="ln_solid"></div>
                            <div id="divDatosPeriodicos">
                                <div style="width: 80%;text-align:center;margin: 0 auto;font-size: smaller;color: darkorange;"><p><span class="glyphicon glyphicon-alert" aria-hidden="true" style="font-size: 32px;"></span></p><span>No se han agregado datos periódicos</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@*Modal Configuración Producción*@
<div tabindex="-1" class="modal fade bs-example-modal-sm1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <form action="" method="post" id="frmCfgProduccion">
                <div class="modal-header">
                    <button class="close" aria-label="Close" type="button" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel2">Variación</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <span>Producción</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtPH", null, new { @class = "form-control has-feedback-left", placeholder = "Cantidad", data_val = "true", data_val_required = "Dato requerido", data_val_range = "El valor debe estar entre 0 y 1.000.000", data_val_range_min = "0", data_val_range_max = "1000000" })
                            @Html.ValidationMessage("txtPH")
                            <span class="fa fa-superscript form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.DropDownList("ddlPHUm", (SelectList)ViewBag.unidades_medida, " -- Unidad -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                            @Html.ValidationMessage("ddlPHUm")
                            <span class="fa fa-tachometer form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <span>Alistamiento</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtTA", null, new { @class = "form-control has-feedback-left", placeholder = "Cantidad", data_val = "true", data_val_required = "Dato requerido", data_val_range = "El valor debe estar entre 0 y 24", data_val_range_min = "0", data_val_range_max = "24" })
                            @Html.ValidationMessage("txtTA")
                            <span class="fa fa-clock-o form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.DropDownList("ddlTAUm", (SelectList)ViewBag.unidades_medida, " -- Unidad -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                            @Html.ValidationMessage("ddlTAUm")
                            <span class="fa fa-tachometer form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-primary" type="button" onclick="produccion.AgregarConfiguracion();">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>
@*Modal Datos Periodicos*@
<div tabindex="-1" class="modal fade bs-example-modal-sm2" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <form action="" method="post" id="frmDatosPeriodicos">
                <div class="modal-header">
                    <button class="close" aria-label="Close" type="button" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel2">Datos Periódicos</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <span>Costos</span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.DropDownList("ddlPeriodo", (SelectList)ViewBag.Periodos, " -- Periodo -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                            @Html.ValidationMessage("ddlPeriodo")
                            <span class="fa fa-history form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtAvaluo", null, new { @class = "form-control has-feedback-left", placeholder = "Avaluo comercial", data_val = "true", data_val_required = "Dato requerido", data_val_range = "El valor debe estar entre 0 y 1.000.000.000", data_val_range_min = "0", data_val_range_max = "1000000000" })
                            @Html.ValidationMessage("txtAvaluo")
                            <span class="fa fa-money form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtPresupuesto", null, new { @class = "form-control has-feedback-left", placeholder = "Presupuesto", data_val = "true", data_val_required = "Dato requerido", data_val_range = "El valor debe estar entre 0 y 1.000.000.000", data_val_range_min = "0", data_val_range_max = "1000000000" })
                            @Html.ValidationMessage("txtPH")
                            <span class="fa fa-money form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <span>Tiempo de mantenimiento</span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtTM", null, new { @class = "form-control has-feedback-left", placeholder = "Cantidad", data_val = "true", data_val_required = "Dato requerido", data_val_range = "El valor debe estar entre 0 y 100", data_val_range_min = "0", data_val_range_max = "100" })
                            @Html.ValidationMessage("txtTM")
                            <span class="fa fa-superscript form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            @Html.DropDownList("ddlTMUm", (SelectList)ViewBag.unidades_medida, " -- Unidad -- ", new { @class = "form-control has-feedback-left", data_val = "true", data_val_required = "Dato requerido." })
                            @Html.ValidationMessage("ddlTMUm")
                            <span class="fa fa-tachometer form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-primary" type="button" onclick="produccion.AgregarDatoPeriodico()">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        // Smart Wizard
        $('#wizard').smartWizard({
            labelNext: 'Siguiente', // label for Next button
            labelPrevious: 'Anterior', // label for Previous button
            labelFinish: 'Terminar',  // label for Finish button
        });

        function onFinishCallback() {
            if ($('#frmCrearMaquina').valid()) {
                $('#frmCrearMaquina').submit();
            }
            else {
                return false;
            }
        }

        $('.bs-example-modal-sm1').on('hidden.bs.modal', function (e) {
            produccion.CargarTablaProduccion();
        })

        $('.bs-example-modal-sm2').on('hidden.bs.modal', function (e) {
            produccion.CargarTablaDatosPeriodicos();
        })

        if ($("#hfdCfgProduccion").val()) {
            produccion.CargarTablaProduccion();
        }

        if ($("#hfdDatosPeriodicos").val()) {
            produccion.CargarTablaDatosPeriodicos();
        }
    });
</script>