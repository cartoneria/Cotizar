@{
    ViewBag.Title = "ListaTroqueles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Gestión de troqueles</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("CrearTroquel", "Produccion" )"><i class="fa fa-plus"></i> Crear</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-close"></i> Cerrar</a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="divFiltros">
                @using (Ajax.BeginForm("ListaTroqueles", "Produccion", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "divTabla", }))
                {
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtDescripcion", null, new { @class = "form-control has-feedback-left", placeholder = "Descripción", data_val = "true", data_val_length = "El campo acepta mínimo 3, máximo 512 caracteres", data_val_length_min = "3", data_val_length_max = "512" })
                            @Html.ValidationMessage("txtDescripcion")
                            <span class="fa fa-eye form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                            @Html.TextBox("txtMarcacion", null, new { @class = "form-control has-feedback-left", placeholder = "Marcación", data_val = "true", data_val_length = "El campo acepta mínimo 2, máximo 16 caracteres", data_val_length_min = "2", data_val_length_max = "16" })
                            @Html.ValidationMessage("txtMarcacion")
                            <span class="fa fa-crosshairs form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                            @Html.DropDownList("ddlMaterial", (SelectList)ViewBag.ddlMaterial, " -- Material -- ", new { @class = "form-control has-feedback-left" })
                            @Html.ValidationMessage("ddlMaterial")
                            <span class="fa fa-tag form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                            @Html.DropDownList("ddlEstilo", (SelectList)ViewBag.ddlEstilo, " -- Estilo -- ", new { @class = "form-control has-feedback-left" })
                            @Html.ValidationMessage("ddlEstilo")
                            <span class="fa fa-tag form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtAlto", null, new { @class = "form-control has-feedback-left", placeholder = "Alto", data_val = "true", data_val_range_min = "0", data_val_range_max = "100", data_val_range = "Dato inválido" })
                            @Html.ValidationMessage("txtAlto")
                            <span class="fa fa-arrows-v form-control-feedback left" aria-hidden="true"></span>
                        </div>

                        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtAncho", null, new { @class = "form-control has-feedback-left", placeholder = "Ancho", data_val = "true", data_val_range_min = "0", data_val_range_max = "100", data_val_range = "Dato inválido" })
                            @Html.ValidationMessage("txtAncho")
                            <span class="fa fa-arrows-h form-control-feedback left" aria-hidden="true"></span>
                        </div>

                        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
                            @Html.TextBox("txtLargo", null, new { @class = "form-control has-feedback-left", placeholder = "Largo", data_val = "true", data_val_range_min = "0", data_val_range_max = "100", data_val_range = "Dato inválido" })
                            @Html.ValidationMessage("txtLargo")
                            <span class="fa fa-expand form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <input class="btn btn-primary pull-right" type="reset" value="Limpiar" />
                            <button class="btn btn-success pull-right" onclick="NProgress.start();"><i class="fa fa-binoculars"></i> Buscar</button>
                        </div>
                    </div>
                }
            </div>
            <div class="clearfix"></div>
            <hr />
            <div id="divTabla">
                <div style="width: 80%;text-align:center;margin: 0 auto;font-size: smaller;color: darkorange;"><p><span class="glyphicon glyphicon-search" aria-hidden="true" style="font-size: 32px;"></span></p><span>Por favor realice una búsqueda para mostrar los resultados</span></div>
            </div>
        </div>
    </div>
</div>