@model IEnumerable<Tier.Gui.CotizarService.Maquina>

<script>
    NProgress.start();
</script>

<table id="tblMaquinas">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.codigo)</th>
            <th>@Html.DisplayNameFor(model => model.nombre)</th>
            <th>@Html.DisplayNameFor(model => model.itemlista_iditemlistas_tipo)</th>
            <th>@Html.DisplayNameFor(model => model.turnos)</th>
            <th>@Html.DisplayNameFor(model => model.fechacreacion)</th>
            <th>@Html.DisplayNameFor(model => model.activo)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <ul class="nav nav-pills" role="tablist">
                        <li role="presentation" class="dropdown">
                            <a id="drop4" href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="true">
                                <span class="fa fa-chevron-down"></span>
                            </a><div class="dropdown-backdrop"></div>
                            <ul id="menu6" class="dropdown-menu animated fadeInDown" role="menu">
                                <li role="presentation">
                                    @Html.ActionLink("Modificar", "EditarMaquina", "Produccion", new { id = item.idmaquina }, null)
                                </li>
                                <li role="presentation" class="divider"></li>
                                <li role="presentation">
                                    @Html.ActionLink("Eliminar", "EliminarMaquina", "Produccion", new { id = item.idmaquina }, null)
                                </li>
                            </ul>
                        </li>
                    </ul>
                </td>
                <td>@Html.DisplayFor(modelItem => item.codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td>
                    @if (item.itemlista_iditemlistas_tipo.HasValue)
                    {
                        @Html.DisplayFor(modelItem => item.itemlista_iditemlistas_desctipo)
                    }
                    else
                    {
                        <text>N/A</text>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.turnos)</td>
                <td>@Html.DisplayFor(modelItem => item.fechacreacion, "ShortDate")</td>
                <td>@Html.DisplayFor(modelItem => item.activo)</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $("#tblMaquinas").DataTable();
</script>

<script>
    NProgress.done();
</script>
