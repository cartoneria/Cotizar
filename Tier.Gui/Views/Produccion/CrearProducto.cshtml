                            </div>
                        </div>
                    </div>
                    @* Guillotinado *@
                    <div class="stepContainer">
                        <div class="wizard_content" id="step-4" style="display: block;">

                            <div class="form-group">
                                <div class="col-md-6 col-sm-12 col-xs-12 form-group has-feedback">
