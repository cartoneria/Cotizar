<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Tier.Gui.Helpers.CustomHtmlHelpers.ApplicationName</title>
    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/fonts/css/font-awesome.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/animate.min.css")" rel="stylesheet">
    <!-- Custom styling plus plugins -->
    <link href="@Url.Content("~/css/custom.css")" rel="stylesheet">
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

    <script src="@Url.Content("~/js/site/globalscripting.js")"></script>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/custom.js")"></script>
    <script src="@Url.Content("~/js/nicescroll/jquery.nicescroll.min.js")"></script>

    <script src="@Url.Content("~/js/DataTables/media/js/jquery.dataTables.js")"></script>
    <link href="@Url.Content("~/js/DataTables/media/css/jquery.dataTables.min.css")" rel="stylesheet" />

    @*<script src="@Url.Content("~/js/notify/pnotify.buttons.js")"></script>*@
    <script src="@Url.Content("~/js/notify/pnotify.core.js")"></script>
    <script src="@Url.Content("~/js/notify/pnotify.nonblock.js")"></script>

    <link href="@Url.Content("~/css/nprogress.css")" rel="stylesheet" />
    <script src="@Url.Content("~/js/nprogress.js")"></script>

    <link href="@Url.Content("~/css/icheck/flat/green.css")" rel="stylesheet" />
    <script src="@Url.Content("~/js/wizard/jquery.smartWizard.js")"></script>

    <script src="@Url.Content("~/js/chartjs/chart.min.js")"></script>
    <script src="@Url.Content("~/js/knob/jquery.knob.min.js")"></script>
    <link href="@Url.Content("~/css/ion.rangeSlider.css")" rel="stylesheet" />

    <link href="@Url.Content("~/css/select/select2.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/js/select/select2.full.js")"></script>
    <link href="@Url.Content("~/css/productos.css")" rel="stylesheet" />

    <!-- daterangepicker -->
    <script type="text/javascript" src="@Url.Content("~/js/moment.min2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/datepicker/daterangepicker.js")"></script>

    <!--[if lt IE 9]>
        <script src="../assets/js/ie8-responsive-file-warning.js"></script>
        <![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    <script>
        var URIs = {
            Imagenes: '@Url.Content("~/images/")',
            MunicipiosXDepartamento: '@Url.Action("RecupararMunicipiosXDepartamento", "General")',
            AdminEditarItemLista: '@Url.Action("EditarItemLista", "Administracion")',
            LineasProveedor: '@Url.Action("RecuperarLineasProveedor", "Produccion")',
            SubirArchivoImagenTroquel: '@Url.Action("SubirArchivoImagenTroquel", "Produccion")',
            ObtenerPantones: '@Url.Action("ObtenerPantonesTodosJson", "Produccion")',
            ObtLstMaquVar: '@Url.Action("ObtenerListaMaquinasVariacion", "Produccion")'
        };
    </script>
</head>
<body id="body" class="nav-md">
    <script>
        NProgress.start();
    </script>
    @{
        Tier.Gui.CotizarService.Sesion objSes = (Tier.Gui.CotizarService.Sesion)Session["SesionActual"];
        string strNombreImagenLogo = objSes.empresa.urilogo;
        string strNombreUsuario = objSes.usuario.usuario;
        string strNombreCompletoUsuario = objSes.usuario.nombrecompleto;
        string strNombreEmpresa = objSes.empresa.razonsocial;
    }
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <!-- logo empresa -->
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index","Home")" class="site_title"><img src="@Url.Content("~/images/" + strNombreImagenLogo)" alt="Logo empresa" /></a>
                    </div>
                    <!-- /logo empresa -->
                    <div class="clearfix"></div>
                    <br />
                    <br />
                    <div class="clearfix"></div>
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>Funcionalidades</h3>
                            <ul class="nav side-menu">
                                @Html.Partial("_Menu", objSes.menu)
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Personal</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-cubes"></i> Accesos directos <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>
                                            <a href="http://www.eltiempo.com" target="_blank">El Tiempo</a>
                                        </li>
                                        <li>
                                            <a href="http://www.cartoneriamosquera.com/" target="_blank">Cartonería Mosquera</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-envelope"></i> Mensajes <span class="label label-success pull-right">Pronto</span></a>
                                </li>
                                <li>
                                    <a><i class="fa fa-tasks"></i> Tareas <span class="label label-success pull-right">Pronto</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                    <div class="clearfix"></div>
                    <br />
                    <!-- menu prile quick info -->
                    <div class="sidebar-footer hidden-small">
                        <div class="profile">
                            <div class="profile_pic">
                                <img src="@Url.Content("~/images/user.png")" alt="..." class="img-circle profile_img">
                            </div>
                            <div class="profile_info">
                                <span>Bienvenido!,</span>
                                <h2>@strNombreCompletoUsuario</h2>
                            </div>
                        </div>
                    </div>
                    <!-- /menu prile quick info -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <p class="pull-left" style="padding-top: 20px;text-transform: uppercase;letter-spacing: .5px;font-weight: bold;">
                            <span id="func_path"></span>
                        </p>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content("~/images/user.png")" alt="">@strNombreUsuario
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu animated fadeInDown pull-right">
                                    <li>
                                        <a href="@Url.Action("Misdatos", "Seguridad")">Mis datos</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-life-ring pull-right"></i>Ayuda</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CerrarSesion", "Seguridad")"><i class="fa fa-sign-out pull-right"></i>Cerrar sesión</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <!-- MainContent -->
                <div class="row">
                    @RenderBody()
                </div>
                <!-- /MainContent -->

            </div>
            <!-- /page content -->
            <!-- footer content -->
            <div class="clearfix"></div>
            <footer>
                <div class="">
                    <p class="pull-right">
                        Todos los derechos reservados &#169; 2015 -  <a href="http://www.cartoneriamosquera.com" target="_blank">@strNombreEmpresa</a>
                    </p>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <div id="custom_notifications" class="custom-notifications dsp_none">
        <ul class="list-unstyled notifications clearfix" data-tabbed_notifications="notif-group"></ul>
        <div class="clearfix"></div>
        <div id="notif-group" class="tabbed_notifications"></div>
    </div>

    <script src="@Url.Content("~/js/icheck/icheck.min.js")"></script>

    <!-- Menjsajes de confirmación -->
    @if (TempData["MostrarNotificacion"] != null)
    {
        <script>
            $(document).ready(function () {
                var obj = JSON.parse(String('@TempData["MostrarNotificacion"]'));

                new PNotify({
                    title: obj.Titulo,
                    text: obj.Mensaje,
                    type: obj.TipoNotificaciones
                });

            });
        </script>
    }

    <script>
        $(document).ready(function () {
            $("#body").width(window.innerWidth);
            $("#body").height(window.innerHeight);
        });

    </script>

</body>
</html>
