@*@model  IEnumerable<Tier.Gui.CotizarService.ItemLista>*@

@{
    ViewBag.Title = "ListaListas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Gestión de listas</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="#"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-wrench"></i></a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-xs-3">
                <!-- required for floating -->
                <!-- Nav tabs -->
                <ul class="nav nav-tabs tabs-left">
                    <li class="">
                        @Ajax.ActionLink("Áreas", "RecuperarItemsListaGrupo", "Administracion",
                                 new { intIdGrupo = (byte)Tier.Gui.Models.Enumeradores.TiposLista.Areas },
                                 new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "itemsselectedlista" },
                        new { data_toggle = "tab", aria_expanded = "false" })
                    </li>
                    <li class="">
                        @Ajax.ActionLink("Tipo máquina", "RecuperarItemsListaGrupo", "Administracion",
                                          new { intIdGrupo = (byte)Tier.Gui.Models.Enumeradores.TiposLista.TipoMaquina },
                                 new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "itemsselectedlista" },
                        new { data_toggle = "tab", aria_expanded = "false" })
                    </li>
                </ul>
            </div>
            <div id="itemsselectedlista" class="col-md-8 col-lg-8 col-sm-7">
            </div>
        </div>
    </div>
</div>