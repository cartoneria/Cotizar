@model Tier.Gui.CotizarService.RolModel

@{
    ViewBag.Title = "EditarRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Nuevo rol</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("ListaEmpresas", "Administracion")"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm("EditarRol", "Administracion", null, FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(ee => ee.hfdPermisosSeleccionados)
                @Html.Hidden("editando", true)
                @Html.HiddenFor(ee => ee.idrol)

                <div class="form-group">
                    <div class="col-md-4 col-sm-12 col-xs-12 form-group has-feedback">
                        @Html.TextBoxFor(model => model.nombre, new { @class = "form-control has-feedback-left", placeholder = "Nombre" })
                        @Html.ValidationMessageFor(model => model.nombre)
                        <span class="fa fa-paw form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 form-group has-feedback">
                        @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control has-feedback-left", placeholder = "Descripción" })
                        @Html.ValidationMessageFor(model => model.descripcion)
                        <span class="fa fa-quote-right form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="col-md-2 col-sm-12 col-xs-12 form-group">
                        @Html.LabelFor(model => model.activo, new { @class = "control-label" })
                        @Html.CheckBox("activo", Model.activo.Value)
                    </div>
                </div>
                @Html.Partial("_RolFuncionalidades", (IEnumerable<Tier.Gui.CotizarService.Funcionalidad>)ViewBag.lstFuncionalidades)
                <div class="clearfix"></div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" name="btnGuardar" id="btnGuardar" class="btn btn-success" value="Guardar" />
                        <button type="reset" class="btn btn-primary">Limpiar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        Administracion.RolSeleccionarCheckbox();
    })
</script>